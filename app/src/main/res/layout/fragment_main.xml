<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.stathis.unipiapp.ui.dashboard.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_bg"
        tools:context=".ui.dashboard.main.MainFragment">

        <View
            android:id="@+id/top_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100"
            android:background="@drawable/round_corners_bottom"
            android:backgroundTint="@color/unipi_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/unipi_logo"
            android:layout_width="@dimen/image_80"
            android:layout_height="@dimen/image_80"
            android:layout_marginStart="@dimen/dimen_10"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_unipi_logo_svg"
            app:layout_constraintBottom_toBottomOf="@id/top_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/top_header" />

        <TextView
            android:id="@+id/unipi_title"
            style="@style/text_18_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_10"
            android:text="@string/main_screen_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/unipi_logo"
            app:layout_constraintTop_toTopOf="@id/unipi_logo" />

        <TextView
            android:id="@+id/categories_header"
            style="@style/text_18_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_16"
            android:text="@string/categories"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_header" />

        <TextView
            android:id="@+id/categories_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_16"
            android:paddingEnd="@dimen/dimen_16"
            android:text="@string/all_categories"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/categories_header"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_screen_recycler"
            adapter="@{viewModel.adapter}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_10"
            android:paddingEnd="@dimen/dimen_10"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categories_header"
            app:spanCount="2"
            tools:itemCount="10"
            tools:listitem="@layout/holder_home_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>